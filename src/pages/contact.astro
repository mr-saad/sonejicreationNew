---
import Layout from "../layout/Layout.astro"
---

<Layout title="Contact">
  <section class="container">
    <h2 class="heading mx-auto" style="max-width: 500px">Contact</h2>
    <form class="gap">
      <input required class="radius" placeholder="Username" type="text" /><input
        required
        class="radius"
        placeholder="E-Mail"
        type="text"
      /><input
        required
        class="radius"
        type="text"
        placeholder="Phone"
      /><textarea required class="radius" placeholder="Message"></textarea>
      <button type="submit" class="radius">Send</button>
    </form>
  </section>
</Layout>
